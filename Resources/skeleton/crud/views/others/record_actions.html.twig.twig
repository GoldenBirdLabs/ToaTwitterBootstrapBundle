
        <div class="record_actions">

            <div class="btn-group">
            {%- if ('edit' in actions) and (not hide_edit) %}

                <a class="btn" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
                    <i class="icon-pencil"></i>
                    {{ "{{ 'edit'|trans|capitalize }}" }}
                </a>

            {%- endif %}

            {%- if ('delete' in actions) and (not hide_delete) %}

                <a class="btn btn-danger" href="#delete" data-toggle="modal">
                    <i class="icon-trash icon-white"></i>
                    {{ "{{ 'delete'|trans|capitalize }}" }}
                </a>

            {%- endif %}

            </div>

            {%- if ('delete' in actions) and (not hide_delete) %}

            <form action="{{ "{{ path('" ~ route_name_prefix ~ "_delete', { 'id': entity.id }) }}" }}" method="post">
                <div id="delete" class="modal hide fade">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h3>{{ "{{ 'delete'|trans|capitalize }}" }}</h3>
                    </div>
                    <div class="modal-body">
                        {{ "{{ 'Do you really want to delete {{ entity }} \"{{ id }}\"?'|trans({'{{ entity }}': '" ~ entity ~ "', '{{ id }}': entity.id}) }}" }}
                    </div>
                    <div class="modal-footer">
                        {{ '{{ form_widget(delete_form) }}' }}
                        <input type="hidden" name="_method" value="DELETE" />
                        <a href="#" class="btn" data-dismiss="modal">{{ "{{ 'cancel'|trans|capitalize }}" }}</a>
                        <button class="btn btn-danger" type="submit">
                            <i class="icon-trash icon-white"></i>
                            {{ "{{ 'delete'|trans|capitalize }}" }}
                        </button>
                    </div>
                </div>
            </form>

            {%- endif %}

            <a class="btn" href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}">
                <i class="icon-th-list"></i>
                {{ "{{ 'back to the list'|trans|capitalize }}" }}
            </a>
        </div>