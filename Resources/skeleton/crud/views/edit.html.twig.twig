{% include 'views/others/extends.twig.twig' %}

{% include 'views/others/form_theme.twig.twig' with {'form': 'edit_form'} %}

{% include 'views/others/block.twig.twig' %}

        <h1 class="page-header">{{ entity }} {{ "{{ 'edit'|trans }}" }}</h1>

        <form class="form-horizontal" action="{{ "{{ path('" ~ route_name_prefix ~ "_update', { 'id': entity.id }) }}" }}" method="post" {{ "{{ form_enctype(edit_form) }}" }}>
            <input type="hidden" name="_method" value="PUT" />
            {{ "{{ form_widget(edit_form) }}" }}
            <div class="form-actions">
                <button class="btn" type="submit">
                    <i class="icon-pencil"></i>
                    {{ "{{ 'save'|trans|capitalize }}" }}
                </button>
            </div>
        </form>

        {%- set hide_edit, hide_delete = true, false %}
        {%- include 'views/others/record_actions.html.twig.twig' %}

{{ "{% endblock %}" }}
